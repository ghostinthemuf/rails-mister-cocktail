<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> : <%= dose.description %> ( <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %> ) </p>
<% end %>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Go back to cocktails list", cocktails_path %></p>
