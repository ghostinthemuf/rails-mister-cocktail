<h1><%= @cocktail.name %></h1>

<div class="container">

  <div class="row">
    <div class="col-md-6 p-4 cocktail-pic" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.image_url %>); background-size: cover; background-position: center">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> : <%= dose.description %> (<%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>) </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6 p-4">
      <%= render 'new_dose_form', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-6 p-4">
      <h2>What our readers think</h2>
      <% @cocktail.reviews.each do |review| %>
        <p>
          <% review.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - review.rating).times do %>
            <i class="far fa-star"></i>
          <% end %>
          "<%= review.content %>"
        </p>
      <% end %>
    </div>

    <div class="col-md-6 p-4">
      <%= render 'new_review_form', cocktail: @cocktail, review: @review %>
    </div>
  </div>
</div>
