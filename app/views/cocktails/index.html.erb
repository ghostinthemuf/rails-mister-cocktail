<h1>All the cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <div class="card-product">
    <%= image_tag cocktail.image_url %>
    <div class="card-product-infos">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
    </div>
    <% if !cocktail.reviews.last.nil? %>
      <div>
        <p>Last review : <% cocktail.reviews.last.rating.times do %><i class="fas fa-star"></i><% end %><% (5 - cocktail.reviews.last.rating).times do %><i class="far fa-star"></i><% end %> - "<%= cocktail.reviews.last.content %>"</p>
      </div>
    <% end %>
  </div>
<% end %>
