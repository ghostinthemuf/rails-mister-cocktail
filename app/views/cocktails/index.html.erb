<h1 class="my-4">Tous nos cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <div class="card-product d-flex align-items-center">
    <%= cl_image_tag cocktail.photo %>
    <div class="card-product-infos d-flex align-items-center justify-content-between">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      <% if !cocktail.reviews.last.nil? %>
        <div>
          <p>Dernier avis : <% cocktail.reviews.last.rating.times do %><i class="fas fa-star"></i><% end %><% (5 - cocktail.reviews.last.rating).times do %><i class="far fa-star"></i><% end %> - "<%= cocktail.reviews.last.content %>"</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
